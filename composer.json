{
	"name": "themehybrid/hybrid-tools",
	"description": "Helper tools and functions.",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"wordpress"
	],
	"authors": [
		{
			"name": "Theme Hybrid",
			"email": "themehybrid@gmail.com",
			"homepage": "https://themehybrid.com",
			"role": "Developer"
		}
	],
	"homepage": "https://github.com/themehybrid/hybrid-tools",
	"support": {
		"issues": "https://github.com/themehybrid/hybrid-tools/issues",
		"forum": "https://themehybrid.com/board/forums/hybrid-core"
	},
	"require": {
		"php": ">=8.0",
		"ext-ctype": "*",
		"ext-filter": "*",
		"league/commonmark": "^2.3.7",
		"nesbot/carbon": "^2.72.2|^3.0",
		"ramsey/uuid": "^4.7",
		"symfony/uid": "^5.0 || ^6.0 || ^6.1 || ^6.2 || ^7.0",
		"vlucas/phpdotenv": "^5.5",
		"voku/portable-ascii": "^2.0.1"
	},
	"replace": {
		"spatie/once": "*"
	},
	"suggest": {
		"symfony/var-dumper": "Required to use the dump method (^6.1.0 || ^6.2 || ^7.0).",
		"laravel/serializable-closure": "Required to use the Onceable (^1.3.3)."
	},
	"autoload": {
		"psr-4": {
			"Hybrid\\Tools\\": "src/"
		},
		"files": [
			"src/functions-helpers.php",
			"src/WordPress/functions-helpers.php"
		]
	}
}
